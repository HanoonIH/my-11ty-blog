            {% endif %}
            
            <br><br>
            <p class="">
                <i class="text-sm lg:text-md">‡¥Ü‡¥∂‡¥Ø‡¥µ‡¥ø‡¥µ‡µº‡¥§‡µç‡¥§‡¥®‡¥Ç: </i> <br>
                <span class="font-bold text-md lg:text-xl"> {{ translator }} </span> 
                {{ translatorInfo }}
            </p> <br>
            <em>posted on: <strong>{{ page.date | postDate}}</strong> </em>
        </div>

        <div class="md:px-5 | sm:max-w-screen-md">
            {% if recommendedPosts %}
            <div class="bg-gray-200 | px-2 md:px-7 py-6 md:py-10 mt-9">
                {% set postListItems = recommendedPosts %}
                {% set postListHeadline = 'Read more posts' %}

                {% include "partials/postlist.njk" %}
            </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
    var content = document.querySelector('.content');
    content.querySelectorAll('a').forEach(a => {
        a.setAttribute("target", "_blank");
    });
    
    var mainContent = document.querySelector('.content');
    mainContent.querySelectorAll('a').forEach(a => {
        a.classList.add("videoLink");
    })
</script>


